{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": [
    "stylelint-config-htmlacademy"
  ],
  "rules": {
    "declaration-no-important": true,
    "indentation": [2, {"ignore": ["inside-parens"]}],
    "unit-whitelist": [
      "em",
      "rem",
      "%",
      "px",
      "vh",
      "vm",
      "vmax",
      "vmin"
    ]
  }
}